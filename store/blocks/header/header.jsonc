{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "children": [
      "header-row#1-desktop",
      "header-row#2-desktop",
      "header-row#3-desktop"
    ]
  },
  "header-spacer": {
    "props": {
      "width": "grow"
    }
  },
  "header-row#1-desktop": {
    "children": [
      "rich-text#notificationBar"
    ],
    "props": {
      "blockClass": "rowNotificationBar",
      "fullWidth": true
    }
  },
  "rich-text#notificationBar": {
    "props": {
      "text": "**#saldão**   produtos com até *60% de desconto **+** frete grátis **+** 12x sem juros* **>**",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "textNotificationBar"
    }
  },
  "header-row#2-desktop": {
    "props": {
      "blockClass": "row2Desktop",
      "horizontalAlign": "center"
    },
    "children": [
      "header-spacer",
      "logo#desktop",
      "search-bar#desktop",
      "login",
      "minicart.v2",
      "header-spacer"
    ]
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "url": "assets/imgs/logo.png",
      "width": 100,
      "height": 58
    }
  },
  "search-bar#desktop": {
    "props": {
      "blockClass": "searchBarDesktop",
      "placeholder": "O que você precisa hoje? :)",
      "displayMode": "clear-button"
    }
  },
  "login": {
    "props": {
      "showIconProfile": true,
      "hideIconLabel": true,
      "width": "100%"
    }
  },
  "header-row#3-desktop": {
    "props": {
      "blockClass": "row3Desktop",
      "horizontalAlign": "center",
      "fullWidth": true
    },
    "children": [
      "header-spacer",
      "vtex.menu@2.x:menu#category-menu",
      "header-spacer"
    ]
  },
  // mobile -----------------------
  "header-layout.mobile": {
    "children": [
      "sticky-layout#1-mobile",
      "search-bar"
    ]
  },
  "sticky-layout#1-mobile": {
    "children": [
      "header-row#1-mobile"
    ]
  },
  "header-row#1-mobile": {
    "children": [
      "drawer",
      "logo#mobile",
      "header-spacer",
      "minicart.v2"
    ],
    "props": {
      "blockClass": "row1Mobile",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    }
  },
  "drawer": {
    "props": {
      "maxWidth": 335
    },
    "children": [
      "menu#drawer"
    ]
  },
  "menu#drawer": {
    "children": [
      "menu-item#category-electronic",
      "menu-item#category-smartphone",
      "menu-item#category-computing",
      "menu-item#category-home",
      "menu-item#category-decor",
      "menu-item#category-beauty",
      "menu-item#category-media",
      "menu-item#category-all"
    ],
    "props": {
      "orientation": "vertical"
    }
  },
  "logo#mobile": {
    "props": {
      "title": "Logo",
      "url": "assets/imgs/logo.png",
      "width": 90
    }
  },
  "search-bar": {
    "props": {
      "blockClass": "searchBar",
      "placeholder": "Buscar",
      "displayMode": "search-button"
    }
  }
}