{
  "footer": {
    "blocks": [
      "footer-layout.desktop",
      "footer-layout.mobile"
    ]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "newsletter"
    ]
  },
  "newsletter": {
    "props": {
      "blockClass": "news",
      "label": "Quer ficar por dentro de tudo?",
      "placeholder": "Digite seu e-mail",
      "submit": "Cadastrar"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#about",
      "flex-layout.col#service",
      "flex-layout.col#help",
      "rich-text#paymentMethods",
      "flex-layout.col#paymentMethods",
      "flex-layout.col#socialNetworks"
    ],
    "props": {
      "blockClass": "footer2Desktop",
      "colSizing": "auto",
      "fullWidth": false,
      "horizontalAlign": "center",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true
    }
  },
  "flex-layout.col#about": {
    "children": [
      "rich-text#footer-about",
      "vtex.menu@2.x:menu#about"
    ],
    "props": {
      "blockClass": "columnAbout",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },
  "rich-text#footer-about": {
    "props": {
      "text": "Sobre"
    }
  },
  "flex-layout.col#service": {
    "children": [
      "rich-text#footer-service",
      "vtex.menu@2.x:menu#service"
    ],
    "props": {
      "blockClass": "columnService",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },
  "rich-text#footer-service": {
    "props": {
      "text": "Atendimento"
    }
  },
  "flex-layout.col#help": {
    "children": [
      "rich-text#footer-help",
      "vtex.menu@2.x:menu#help"
    ],
    "props": {
      "blockClass": "columnService",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },
  "rich-text#footer-help": {
    "props": {
      "text": "Ajuda"
    }
  },
  "flex-layout.col#socialNetworks": {
    "children": [
      "rich-text#socialNetworks",
      "social-networks"
    ],
    "props": {
      "blockClass": "columnNetworks",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "top"
    }
  },
  "rich-text#socialNetworks": {
    "props": {
      "text": "Nossas redes"
    }
  },
  "social-networks": {
    "props": {
      "showInColor": false,
      "socialNetworks": [
        {
          "name": "Facebook",
          "src": "assets/imgs/facebook.png"
        },
        {
          "name": "Instagram",
          "src": "assets/imgs/instagram.png"
        },
        {
          "name": "Youtube",
          "src": "assets/imgs/youtube.png"
        }
      ]
    }
  },
  "flex-layout.col#paymentMethods": {
    "children": [
      "image#visa",
      "image#master",
      "image#dinners",
      "image#amex",
      "image#elo",
      "image#billet"
    ],
    "props": {
      "blockClass": "columnPayments",
      "width": "auto",
      "horizontalAlign": "left",
      "verticalAlign": "middle"
    }
  },
  "rich-text#paymentMethods": {
    "props": {
      "text": "Pagamento"
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "children": [
      "flex-layout.row#certificates",
      "rich-text#footer-copyright",
      "flex-layout.row#poweredBy"
    ],
    "props": {
      "blockClass": "rowCertificates"
    }
  },
  "flex-layout.row#certificates": {
    "children": [
      "image#encrypt",
      "image#ebit",
      "image#pci"
    ]
  },
  "rich-text#footer": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": [
      "flex-layout.col#footer-1-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "newsletter",
      "vtex.menu@2.x:menu#footer-mobile",
      "social-networks",
      "flex-layout.row#paymentImages",
      "rich-text#footer-copyright"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.row#paymentImages": {
    "props": {
      "preserveLayoutOnMobile": true,
      "blockClass": "paymentImgs",
      "width": "50%"
    },
    "children": [
      "image#visa",
      "image#master",
      "image#dinners",
      "image#amex",
      "image#elo",
      "image#billet",
      "image#encrypt",
      "image#ebit",
      "image#pci"
    ]
  },
  "image#visa": {
    "props": {
      "blockClass": "visaImg",
      "src": "assets/imgs/visa.png",
      "height": 30,
      "width": 35
    }
  },
  "image#master": {
    "props": {
      "blockClass": "masterImg",
      "src": "assets/imgs/mastercard.png",
      "height": 30,
      "width": 35
    }
  },
  "image#dinners": {
    "props": {
      "blockClass": "dinnersImg",
      "src": "assets/imgs/dinners.png",
      "height": 30,
      "width": 35
    }
  },
  "image#amex": {
    "props": {
      "blockClass": "amexImg",
      "src": "assets/imgs/amex.png",
      "height": 35,
      "width": 35
    }
  },
  "image#elo": {
    "props": {
      "blockClass": "eloImg",
      "src": "assets/imgs/elo.png",
      "height": 30,
      "width": 35
    }
  },
  "image#billet": {
    "props": {
      "blockClass": "billetImg",
      "src": "assets/imgs/billet.png",
      "height": 25,
      "width": 25
    }
  },
  "image#encrypt": {
    "props": {
      "src": "assets/imgs/letsencrypt.png",
      "blockClass": "certificates",
      "height": 30,
      "width": 35
    }
  },
  "image#ebit": {
    "props": {
      "src": "assets/imgs/ebit.png",
      "blockClass": "certificates",
      "height": 30,
      "width": 35
    }
  },
  "image#pci": {
    "props": {
      "src": "assets/imgs/pci.png",
      "blockClass": "certificates",
      "height": 30,
      "width": 35
    }
  },
  "rich-text#footer-copyright": {
    "props": {
      "textPosition": "center",
      "text": "AVANTI S.A Â© 2020. TODOS OS DIREITOS RESERVADOS.",
      "blockClass": "footer"
    }
  },
  "flex-layout.row#poweredBy": {
    "children": [
      "image#avanti",
      "image#vtex"
    ]
  },
  "image#avanti": {
    "props": {
      "src": "assets/imgs/avanti.png",
      "blockClass": "poweredBy",
      "height": 30,
      "width": 35
    }
  },
  "image#vtex": {
    "props": {
      "src": "assets/imgs/vtex.svg",
      "blockClass": "poweredBy",
      "height": 30,
      "width": 35
    }
  }
}